      body: SingleChildScrollView(
        child: Column(
          children: [
            _buildValoreHeroBanner(screenWidth),
            const SizedBox(height: 50),
            _buildValoreProductGrid(),
            const SizedBox(height: 50),
            const AppFooter(),
